# Meme Kit AI Configuration
# Copy this file to .env.local and fill in your values

# Enable AI-powered meme generation (set to "on" to enable)
MEME_AI=off

# Enable AI-powered logo generation (set to "on" to enable)
MEME_AI_LOGO=off

# Daily AI usage limit (0 = unlimited, e.g., 200 for 200 AI logos per day)
MEME_AI_DAILY_MAX=0

# OpenAI API Key (required if MEME_AI or MEME_AI_LOGO is enabled)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Admin Authentication Configuration
# Comma-separated list of admin wallet addresses (e.g., "wallet1,wallet2,wallet3")
ADMIN_WALLETS=your_admin_wallet_1,your_admin_wallet_2

# Frontend-accessible admin wallets (for showing Admin link in navbar)
NEXT_PUBLIC_ADMIN_WALLETS=your_admin_wallet_1,your_admin_wallet_2

# Admin UI Configuration
# Set to "1" to show admin login link in navigation (set to "0" or unset in production)
ADMIN_UI=0

# JWT secret for admin session tokens (should be a long, random string)
ADMIN_JWT_SECRET=superlongrandomstringatleast32characters

# Admin session TTL in minutes (default: 60 minutes)
SESSION_TTL_MIN=60

# Admin nonce TTL in minutes (default: 5 minutes)
NONCE_TTL_MIN=5

# Legacy admin secret (deprecated - will be removed in future versions)
# ADMIN_SECRET=your_admin_secret_here

# Other environment variables can be added here
# NEXT_PUBLIC_BRAND=degen

# Orca DEX Feature Flags
# Enable Orca position management actions (set to "on" to enable)
ORCA_ACTIONS=on

# Enable Orca liquidity commit functionality (set to "on" to enable)
DEX_ORCA_COMMIT=on

# Data persistence configuration (optional)
# Custom directory for storing transaction metadata (default: ./.data)
# DATA_DIR=./custom-data-path

# Action Logging Configuration
# Enable detailed action logging for development/debugging
NEXT_PUBLIC_ENABLE_ACTION_LOGGING=true

# Enable file logging for production monitoring (requires logging service)
NEXT_PUBLIC_ENABLE_FILE_LOGGING=false

# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://username:password@host:port/database
# Example: postgresql://myuser:mypassword@localhost:5432/solana_tokens
DATABASE_URL=postgresql://username:password@localhost:5432/solana_tokens

# RPC Endpoint Configuration
# Solana RPC endpoint for blockchain interactions (used by frontend)
NEXT_PUBLIC_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Server-side RPC endpoints (used by API routes)
# Primary RPC endpoint for server operations
RPC_PRIMARY=https://api.mainnet-beta.solana.com

# Fallback RPC endpoint for server operations (optional)
# If not set, will use RPC_PRIMARY or NEXT_PUBLIC_RPC_ENDPOINT
RPC_FALLBACK=https://api.mainnet-beta.solana.com

# Pro Access Payment Configuration
# Fee wallet address for receiving Pro access payments
FEE_WALLET=your_fee_wallet_public_key_here

# Pro access pricing (set at least one)
# Amount in SOL required for Pro access
PRO_FEE_SOL=0.25

# Amount in USDC required for Pro access
PRO_FEE_USDC=25

# USDC token mint address (Solana mainnet)
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Frontend-accessible Pro configuration (NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_FEE_WALLET=your_fee_wallet_public_key_here
NEXT_PUBLIC_PRO_FEE_SOL=0.25
NEXT_PUBLIC_PRO_FEE_USDC=25

# Launch Fee Configuration
# Flat fee in SOL required for token launches (paid upfront)
LAUNCH_FLAT_FEE_SOL=0.02

# Skim percentage in basis points (1% = 100 basis points)
# This percentage is skimmed from liquidity during launch
LAUNCH_SKIM_BP=200

# Launch fee wallet (can be same as Pro fee wallet or separate)
# If not set, will use FEE_WALLET as fallback
LAUNCH_FEE_WALLET=your_launch_fee_wallet_public_key_here

# Network Configuration
# Set to "devnet" for development/testing, "mainnet" for production
NETWORK=mainnet

# Devnet Behavior Overrides (only used when NETWORK=devnet)
# These flags provide sensible defaults for devnet testing
# Relaxed confirmation timeout in milliseconds (default: 60000 = 60 seconds)
DEVNET_RELAX_CONFIRM_MS=60000

# Disable DexScreener API calls on devnet (default: 1 = disabled)
# Set to "0" to enable DexScreener on devnet
DEVNET_DISABLE_DEXSCR=1

# Allow manual Raydium pool configuration on devnet (default: 1 = enabled)
# Set to "0" to disable manual Raydium configuration on devnet
DEVNET_ALLOW_MANUAL_RAYDIUM=1

# WSOL Dust Detection Configuration
# Threshold in SOL for detecting small WSOL leftovers (default: 0.01 SOL)
# When WSOL balance is below this threshold, users will see a banner to unwrap and close the account
WSOL_DUST_SOL=0.01

# Pinata IPFS Configuration
# API keys for Pinata IPFS service (required for token metadata and image uploads)
# Get your keys from: https://pinata.cloud/
# IMPORTANT: These keys are used SERVER-SIDE ONLY for security
# Do NOT use NEXT_PUBLIC_ prefix - keys must remain private
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here